@model IList<FlashBanner>
@{
    int j = 0;
}

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- class of slide for animation -->
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {
            <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
            }
            else
            { 
            <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
        
            }
        }
    </ol>
    <div class="carousel-inner">

        @foreach (var item_img in Model)
        {
            if (j == 0)
            {
            <div class="item active">
                @if (!String.IsNullOrWhiteSpace(item_img.Url))
                {
                    <a href="@item_img.Url">
                        <img class="ban-img" alt="" title="" src="@Url.Content("~/public/UserFiles/flashbanners/" + item_img.Banner) " />
                    </a>
                }
                else
                {
                    <img class="ban-img" alt="" title="" src="@Url.Content("~/public/UserFiles/flashbanners/" + item_img.Banner) " />                    
                }
            </div>
            }
            else
            { 
            <div class="item">
                @if (!String.IsNullOrWhiteSpace(item_img.Url))
                {
                    <a href="@item_img.Url">
                        <img class="ban-img" alt="" title="" src="@Url.Content("~/public/UserFiles/flashbanners/" + item_img.Banner) " />
                    </a>
                }
                else 
                { 
                    <img class="ban-img" alt="" title="" src="@Url.Content("~/public/UserFiles/flashbanners/" + item_img.Banner) " />
                }
            </div>
        
            } j++;
        }
    </div>
@*    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <img src="@Url.Content("~/public/images/RT_arrow.png")" "/>
      
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
       <img src="@Url.Content("~/public/images/LF_arrow.png")" "/>
    </a>*@
</div>
<!-- /.carousel -->
<script>
    $(document).ready(function () {
        $('.carousel').carousel({
            interval: 5000
        });
    });
</script>


    var usersIds = [];
    var usersnames = [];

    $("#reset").click(function(){
        $('#UsersListtTar')
            .find('option')
            .remove();

    });

    $('#UsersList').change(function(){
        usersIds = [];
        usersnames = [];
        $("#UsersList option:selected").each(function() {
            usersIds.push($(this).val());
            usersnames.push($(this).text());
            //alert($(this).val());
        });
    });

    $("#btn").click(function(){
        //alert(usersIds);
        //alert(usersnames);


        var select = document.getElementById("UsersListtTar");
        var options = usersnames;
        var values = usersIds;
        for(var i = 0; i < options.length; i++) {
            var opt = options[i];
            var val = values[i];
            var el = document.createElement("option");
            el.textContent = opt;
            el.value = val;
            select.appendChild(el);
        }




    });


    $('#docform').submit(function() {
        // alert("here");
        var ids= [];

@{
    ViewBag.Title = "מסמכים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <h4 class="box-title">מסמכים
    </h4>
    <div class="box-content page-content">

        <table class='table table-hover table-bordered'>
            <tr>
                <td>שם הנוהל</td>
                <td>הורד לקריאה</td>
            </tr>
            @foreach (Doc doc in Model)
            {
                <tr>
                    <td>@doc.Name</td>

                    <td><a href="/Public/userfiles/docs/@doc.Url">הורד לקריאה</a> </td>
                </tr>
            }
        </table>
    </div>
</div>
